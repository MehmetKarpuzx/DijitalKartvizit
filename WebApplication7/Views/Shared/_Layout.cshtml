    <!-- Kart flip efektleri için özel stil -->
    <style>
        /* Ortak Kart Stili */
        .card {
            width: 300px !important;
            height: 200px;
            perspective: 1200px;
            margin: 20px auto;
        }

        .card-inner {
            width: 100%;
            height: 100%;
            position: relative;
            transform-style: preserve-3d;
            transition: transform 0.8s cubic-bezier(0.4, 0.2, 0.2, 1);
        }

        .card:hover .card-inner {
            transform: rotateY(180deg) scale(1.02);
        }

        .card-front,
        .card-back {
            position: absolute;
            width: 100%;
            height: 100%;
            backface-visibility: hidden;
            -webkit-backface-visibility: hidden;
            display: flex;
            align-items: center;
            justify-content: center;
            font-size: 24px;
            color: #fff;
            border: none;
            border-radius: 15px;
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.2);
        }

        /* Gümüş Kart (Varsayılan) */
        .card.silver .card-front {
            background: linear-gradient(135deg, #dcdcdc, #bfbfbf);
        }

        .card.silver .card-back {
            background: linear-gradient(135deg, #a9a9a9, #808080);
            transform: rotateY(180deg);
        }

        /* Altın Kart */
        .card.gold .card-front {
            background: linear-gradient(135deg, #ffd700, #e6ac00);
        }

        .card.gold .card-back {
            background: linear-gradient(135deg, #b8860b, #8b6914);
            transform: rotateY(180deg);
        }

        /* Platinyum Kart */
        .card.platinum .card-front {
            background: linear-gradient(135deg, #e5e4e2, #c0c0c0);
        }

        .card.platinum .card-back {
            background: linear-gradient(135deg, #808080, #696969);
            transform: rotateY(180deg);
        }
    </style>
</head>
